<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  
  <!-- 配置session 有效时间，单位是分钟 ，连续30分钟不使用session就会销毁 -->
  <session-config>
  	<session-timeout>30</session-timeout>
  </session-config>	
	
  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>cn.itcast.servlet.demo1.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LastVisitServlet</servlet-name>
    <servlet-class>cn.itcast.servlet.cookie.demo1.LastVisitServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PathCookieServlet</servlet-name>
    <servlet-class>cn.itcast.servlet.cookie.demo2.PathCookieServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteCookieServlet</servlet-name>
    <servlet-class>cn.itcast.servlet.cookie.demo3.DeleteCookieServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProductHistoryServlet</servlet-name>
    <servlet-class>cn.itcast.servlet.cookie.demo4.ProductHistoryServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CleanHistoryServlet</servlet-name>
    <servlet-class>cn.itcast.servlet.cookie.demo4.CleanHistoryServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>WriteSessionServlet</servlet-name>
    <servlet-class>cn.itcast.servlet.session.demo1.WriteSessionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReadSessionServlet</servlet-name>
    <servlet-class>cn.itcast.servlet.session.demo1.ReadSessionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BuyServlet</servlet-name>
    <servlet-class>cn.itcast.servlet.session.demo2.BuyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>cn.itcast.servlet.session.demo3.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CheckcodeServlet</servlet-name>
    <servlet-class>cn.itcast.servlet.session.demo3.CheckcodeServlet</servlet-class>
  </servlet>











  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LastVisitServlet</servlet-name>
    <url-pattern>/lastvisit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PathCookieServlet</servlet-name>
    <url-pattern>/servlet/path</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteCookieServlet</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductHistoryServlet</servlet-name>
    <url-pattern>/producthistory</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CleanHistoryServlet</servlet-name>
    <url-pattern>/cleanhistory</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WriteSessionServlet</servlet-name>
    <url-pattern>/writesession</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReadSessionServlet</servlet-name>
    <url-pattern>/readsession</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BuyServlet</servlet-name>
    <url-pattern>/buy</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CheckcodeServlet</servlet-name>
    <url-pattern>/checkcode</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
